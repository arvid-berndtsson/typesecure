{
  "name": "typesecure",
  "version": "0.2.0",
  "description": "Classification-first security core for TypeScript. Prevent secrets and PII leaks with type-safe data classification, runtime validation, and policy enforcement. Safe defaults for logs, analytics, network calls, and storage.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "browser": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --target es2020 --minify",
    "build:analyze": "tsup src/index.ts --format esm --dts --target es2020 --minify --metafile",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "lint:docs": "node scripts/check-docs.js",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:coverage": "jest --config jest.config.js --coverage",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prepublishOnly": "pnpm run lint && pnpm run test && pnpm run build",
    "preversion": "pnpm run lint",
    "version": "pnpm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "typescript",
    "security",
    "data-classification",
    "data-protection",
    "pii",
    "secrets",
    "redaction",
    "policy",
    "zod",
    "typesafe",
    "privacy",
    "compliance",
    "gdpr",
    "hipaa",
    "data-leak-prevention",
    "runtime-validation",
    "type-safety",
    "secure-by-default"
  ],
  "author": "Arvid Berndtsson",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arvid-berndtsson/typesecure.git"
  },
  "bugs": {
    "url": "https://github.com/arvid-berndtsson/typesecure/issues"
  },
  "homepage": "https://github.com/arvid-berndtsson/typesecure#readme",
  "packageManager": "pnpm@10.6.3",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.19.7",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^9.1.2",
    "jest": "^29.7.0",
    "prettier": "^3.8.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "zod": "^3.25.76"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
